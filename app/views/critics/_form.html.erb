<div class='form-body'>
  <%= form_with model: [@game, @critic], local: true do |form| %>
    <% if @critic.errors.any? %>
      <div id="error_explanation">
        <h2>
          Something went wrong:
        </h2>
        <ul>
          <% @critic.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <p class='form-p'>
        <%= form.label :title, class: 'form-text' %></br>
        <%= form.text_field :title, class: 'form-field' %>
      </p>
      <p class='form-p'>
        <%= form.label :body, class: 'form-text' %></br>
        <%= form.text_area :body, class: 'form-field comment_input' %>
      </p>

      <div class="form-button form-p">
      <%= form.submit class: "button button-category"%>
          <%= link_to "Cancel", :back, class: 'button' %>
      </div>
    </div>
  <% end %>
</div>